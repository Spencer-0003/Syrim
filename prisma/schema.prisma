// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BlacklistType {
  GUILD
  USER
}

model Blacklist {
  id        String        @id
  type      BlacklistType
  moderator String
  reason    String
}

model Command {
  commandId String @id
  guildId   String
  response  String
}

model Guild {
  id                 String   @id
  disabledCategories String[]
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model User {
  id         String    @id
  bio        String    @default("No bio set.")
  birthday   DateTime?
  color      String    @default("GREEN")
  gender     String    @default("Undisclosed")
  level      Int       @default(1)
  lover      String    @default("")
  money      Int       @default(0)
  reputation String    @default("User")
  xp         Int       @default(0)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())
}
